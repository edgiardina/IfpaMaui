<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:Ifpa.Converters"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Ifpa.Views.PlayerVersusPlayerPage"
             xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
             xmlns:local="clr-namespace:Ifpa"
             ios:Page.LargeTitleDisplay="Never"
             Title="{Binding Title}"
             xmlns:ifpaplayer="clr-namespace:PinballApi.Models.WPPR.Universal.Players;assembly=PinballApi"
             xmlns:vm="clr-namespace:Ifpa.ViewModels"
             x:DataType="vm:PlayerVersusPlayerViewModel"
             xmlns:models="clr-namespace:Ifpa.Models">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:PlayerVersusRecordStringConverter x:Key="pvpString" />
            <toolkit:InvertedBoolConverter x:Key="BoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="{x:Static local:Strings.PlayerVersusPlayerPage_Filter}"
                     x:Name="InfoButton"
                     Command="{Binding ShowPvpFilterCommand}">
            <ToolbarItem.IconImageSource>
                <FontImageSource Glyph="{StaticResource FluentIcon.Filter28}"
                                 FontFamily="FluentRegular"
                                 Color="{StaticResource IconAccentColor}" />
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
    </ContentPage.ToolbarItems>
    <Grid>
        <ActivityIndicator IsVisible="{Binding IsBusy}"
                           IsRunning="{Binding IsBusy}" />
        <Label Grid.Row="0"
               IsVisible="{Binding HasNoPvpData}"
               VerticalTextAlignment="Center"
               HorizontalTextAlignment="Center"
               FontAttributes="Italic"
               Text="{x:Static local:Strings.PlayerVersusPlayerPage_PlayerHasNotPlayedAgainstCompetitorsYet}" />
        <CollectionView x:Name="MyListView"
                        Grid.Row="0"
                        IsVisible="{Binding HasNoPvpData, Converter={StaticResource BoolConverter}}"
                        ItemsSource="{Binding AllResults}"
                        SelectionMode="Single"
                        SelectedItem="{Binding SelectedPvp, Mode=TwoWay}"
                        SelectionChangedCommand="{Binding ShowPvpDetailCommand}"
                        IsGrouped="True">
            <CollectionView.GroupHeaderTemplate>
                <DataTemplate x:DataType="models:PlayerVersusRecordGroup">
                    <StackLayout Orientation="Vertical"
                                 BackgroundColor="{AppThemeBinding Light={StaticResource SecondaryBackgroundColor}, Dark={StaticResource SecondaryBackgroundColorDark}}">
                        <Label Text="{Binding Key}"
                               Padding="15,10,0,10" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.GroupHeaderTemplate>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="ifpaplayer:PlayerVersusRecord">
                    <VerticalStackLayout>
                        <Grid ColumnDefinitions="*,*"
                              Margin="10">
                            <Label LineBreakMode="NoWrap"
                                   FontSize="16"
                                   HorizontalTextAlignment="Start">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <FormattedString.Spans>
                                            <Span Text="{Binding FirstName}" />
                                            <Span Text="{x:Static local:Strings.SingleSpace}" />
                                            <Span Text="{Binding LastName}" />
                                        </FormattedString.Spans>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <Label LineBreakMode="NoWrap"
                                   FontSize="16"
                                   Grid.Column="1"
                                   HorizontalTextAlignment="End"
                                   TextColor="{Binding Path=., Converter={StaticResource pvpString}}">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <FormattedString.Spans>
                                            <Span Text="{Binding WinCount}" />
                                            <Span Text=" - " />
                                            <Span Text="{Binding LossCount}" />
                                            <Span Text=" - " />
                                            <Span Text="{Binding TieCount}" />
                                        </FormattedString.Spans>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </Grid>
                        <BoxView Style="{StaticResource BoxSeperator}" />
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>